<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ui.citizen.VaccineFragment"
                                                   android:background="@android:color/white"
                                                   android:id="@+id/constraintLayout3">

    <com.hunorszondi.covidpassport.customViews.NavigationHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Certificate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/navigationHeader"/>

    <ScrollView
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:fillViewport="true"
            android:isScrollContainer="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/navigationHeader"
            app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="24dp"
                android:paddingBottom="24dp">

            <Button
                    android:id="@+id/qrCodeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/round_corners"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="@string/show_qr"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/detailsTextView" />

            <EditText
                    android:id="@+id/docNameInput"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="64dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="64dp"
                    android:background="@drawable/round_corners"
                    android:ems="10"
                    android:hint="@string/doc_name"
                    android:inputType="text"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/qrCodeButton" />

            <EditText
                    android:id="@+id/typeInput"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/round_corners"
                    android:ems="10"
                    android:hint="@string/type"
                    android:inputType="text"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:layout_constraintEnd_toEndOf="@+id/docNameInput"
                    app:layout_constraintStart_toStartOf="@+id/docNameInput"
                    app:layout_constraintTop_toBottomOf="@+id/docNameInput" />

            <EditText
                    android:id="@+id/IDCardNumberInput"
                    android:layout_width="0dp"
                    android:layout_height="51dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/round_corners"
                    android:ems="10"
                    android:hint="@string/id_card_nr"
                    android:inputType="text"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:layout_constraintEnd_toEndOf="@+id/centerNameInput"
                    app:layout_constraintStart_toStartOf="@+id/centerNameInput"
                    app:layout_constraintTop_toBottomOf="@+id/centerNameInput" />

            <EditText
                    android:id="@+id/ageInput"
                    android:layout_width="0dp"
                    android:layout_height="51dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/round_corners"
                    android:ems="10"
                    android:hint="@string/age"
                    android:inputType="text"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:layout_constraintEnd_toEndOf="@+id/IDCardNumberInput"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/IDCardNumberInput"
                    app:layout_constraintTop_toBottomOf="@+id/IDCardNumberInput" />

            <EditText
                    android:id="@+id/centerNameInput"
                    android:layout_width="0dp"
                    android:layout_height="51dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/round_corners"
                    android:ems="10"
                    android:hint="@string/center_name"
                    android:inputType="text"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:layout_constraintEnd_toEndOf="@+id/dateInput"
                    app:layout_constraintStart_toStartOf="@+id/dateInput"
                    app:layout_constraintTop_toBottomOf="@+id/dateInput" />

            <EditText
                    android:id="@+id/dateInput"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/round_corners"
                    android:ems="10"
                    android:hint="@string/date"
                    android:inputType="datetime"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:layout_constraintEnd_toEndOf="@+id/typeInput"
                    app:layout_constraintStart_toStartOf="@+id/typeInput"
                    app:layout_constraintTop_toBottomOf="@+id/typeInput" />

            <EditText
                    android:id="@+id/docSerialNrInput"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/round_corners"
                    android:ems="10"
                    android:hint="@string/doc_serial_nr"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    app:layout_constraintEnd_toEndOf="@+id/IDCardNumberInput"
                    app:layout_constraintStart_toStartOf="@+id/ageInput"
                    app:layout_constraintTop_toBottomOf="@+id/ageInput" />

            <Button
                    android:id="@+id/doneButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/buttonshape"
                    android:text="@string/done"
                    android:textColor="@android:color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/idImageDeleteImageView" />

            <Button
                    android:id="@+id/uploadIDButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/round_corners"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="@string/upload_id"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/idImageView"
                    app:layout_constraintStart_toStartOf="@+id/idImageView"
                    app:layout_constraintTop_toBottomOf="@+id/filesTextView" />

            <Button
                    android:id="@+id/uploadProofDocButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_corners"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="@string/upload_proof"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/docImageView"
                    app:layout_constraintStart_toStartOf="@+id/docImageView"
                    app:layout_constraintTop_toTopOf="@+id/uploadIDButton" />

            <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/docSerialNrInput" />

            <TextView
                    android:id="@+id/detailsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/details"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:id="@+id/helperTextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/doc_name"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@+id/docNameInput"
                    app:layout_constraintStart_toStartOf="@+id/docNameInput" />

            <TextView
                    android:id="@+id/helperTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/type"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@+id/typeInput"
                    app:layout_constraintStart_toStartOf="@+id/typeInput" />

            <TextView
                    android:id="@+id/helperTextView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/date"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@+id/dateInput"
                    app:layout_constraintStart_toStartOf="@+id/dateInput" />

            <TextView
                    android:id="@+id/helperTextView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/doc_serial_nr"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@+id/docSerialNrInput"
                    app:layout_constraintStart_toStartOf="@+id/docSerialNrInput" />

            <TextView
                    android:id="@+id/idImageHelpTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/id"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@+id/idImageView"
                    app:layout_constraintStart_toStartOf="@+id/idImageView" />

            <TextView
                    android:id="@+id/docImageHelpTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/proof_doc"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@+id/docImageView"
                    app:layout_constraintStart_toStartOf="@+id/docImageView" />

            <TextView
                    android:id="@+id/helperTextView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/center_name"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@+id/centerNameInput"
                    app:layout_constraintStart_toStartOf="@+id/centerNameInput" />

            <TextView
                    android:id="@+id/helperTextView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/id_card_nr"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@+id/IDCardNumberInput"
                    app:layout_constraintStart_toStartOf="@+id/IDCardNumberInput" />

            <TextView
                    android:id="@+id/helperTextView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/age"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@+id/ageInput"
                    app:layout_constraintStart_toStartOf="@+id/ageInput" />

            <TextView
                    android:id="@+id/filesTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/files"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/divider" />

            <ImageView
                    android:id="@+id/idImageView"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="36dp"
                    android:background="@color/noNewMessageColor"
                    android:scaleType="centerCrop"
                    android:visibility="visible"
                    app:layout_constraintEnd_toStartOf="@+id/docImageView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/filesTextView"
                    app:srcCompat="@android:drawable/stat_notify_error"
                    tools:src="@tools:sample/avatars" />

            <ImageView
                    android:id="@+id/idImageDeleteImageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/ic_delete_red_24dp"
                    app:layout_constraintEnd_toEndOf="@+id/idImageView"
                    app:layout_constraintStart_toStartOf="@+id/idImageView"
                    app:layout_constraintTop_toBottomOf="@+id/idImageView" />

            <ImageView
                    android:id="@+id/docImageView"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@color/noNewMessageColor"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/idImageView"
                    app:layout_constraintTop_toTopOf="@+id/idImageView"
                    app:srcCompat="@android:drawable/stat_notify_error"
                    tools:src="@tools:sample/avatars" />

            <ImageView
                    android:id="@+id/docImageDeleteImageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/ic_delete_red_24dp"
                    app:layout_constraintEnd_toEndOf="@+id/docImageView"
                    app:layout_constraintStart_toStartOf="@+id/docImageView"
                    app:layout_constraintTop_toBottomOf="@+id/docImageView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>