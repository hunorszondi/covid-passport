<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph_auth.xml"
            app:startDestination="@id/loginFragment">

    <fragment
            android:id="@+id/loginFragment"
            android:name="com.hunorszondi.covidpassport.ui.auth.LoginFragment"
            android:label="LoginFragment">
        <action
                android:id="@+id/action_loginFragment_to_registerFragment"
                app:destination="@id/registerFragment"/>
        <action
                android:id="@+id/action_loginFragment_to_nav_graph_citizen"
                app:destination="@id/nav_graph_citizen.xml"/>
        <action
                android:id="@+id/action_loginFragment_to_nav_graph_authenticator"
                app:destination="@id/nav_graph_authenticator.xml"/>
    </fragment>
    <fragment
            android:id="@+id/registerFragment"
            android:name="com.hunorszondi.covidpassport.ui.auth.RegisterFragment"
            android:label="RegisterFragment"/>
    <include app:graph="@navigation/nav_graph_citizen"/>
    <include app:graph="@navigation/nav_graph_authenticator"/>
</navigation>